root = true

[*]
charset = utf-8
end_of_line = LF

trim_trailing_whitespace = true
insert_final_newline = true
[*.[ch]]
indent_style = space
indent_size = 4
max_line_length = 80
[README.md]
max_line_length = 80
[CMakeLists.txt]
indent_style = space
indent_size = 4
max_line_length = 80
[*.sh]
indent_style = space
indent_size = 2

[*.el]
indent_style = space
max_line_length = 80

[Makefile]
indent_style = tab
tab_width = 4

[.gitmodules]
indent_style = tab
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2

[ert-tests/**/*.ini]
file_type_ext = editorconfig